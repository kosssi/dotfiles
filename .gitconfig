[user]
	name = Simon Constans
	email = kosssi@gmail.com
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
[core]
	editor = nano
	excludesfile = ~/.gitignore_global
[push]
	default = current
[alias]
        clo = clone
        co  = checkout
        st  = status
        pur = pull --rebase
        ci  = commit
        rc  = rebase --continue
        lg  = log -M --decorate --graph --oneline
        br  = branch
        sth = stash
	board = "!f() { php ~/bin/gitboard.phar $@; }; f"
